{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 300, 
    "height": 200,
    "data": {"url": "https://raw.githubusercontent.com/ChanKahHee/FIT3179/main/assignment2/streamgraph/data/number_of_crimes.csv"},
    "mark": "area",
    "encoding": {
        "x": {
        "timeUnit": "year", "field": "year",
        "axis": {"domain": false, "format": "%Y", "tickSize": 0}
        },
        "y": {
        "field": "count",
        "aggregate":"sum",
        "axis": null,
        "stack": "center"
        },
        "color": {"field":"neighbourhood", "scale":{"scheme": "category20b"}}
    }
}
  