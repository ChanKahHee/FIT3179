{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": "container",
    "height":"container",
    "description": "A donut chart showing the part-whole relationship for each type of crime",
    "title": {"text": "Crime type in Vancouver", "dy": -12},
    "data": {
        "url": "https://raw.githubusercontent.com/ChanKahHee/FIT3179/main/assignment2/donutchart/data/crime_type_count.csv"
    },
    "mark": {"type": "arc", "innerRadius": 50},
    "encoding": {
        "theta": {"field": "amount", "type": "quantitative"},
        "color": {"field": "type", "type": "nominal"},
        "tooltip": [
            {"field": "type", "type": "nominal"},
            {"field": "amount", "type": "quantitative"}
        ]
    },
    "view": {"stroke": null}
}
  