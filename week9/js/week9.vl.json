{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 500,
    "height": 300,
    "layer": [
      {
        "data": {
          "url": "vancouver.json",
          "format": {
            "type": "topojson",
            "feature": "local-area-boundary"
          }
        },
        "projection": {
          "type": "equalEarth"
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        }
      },
      {
        "data": {
          "url": "data/2019_crime_records.csv"
        },
        "projection": {
          "type": "equalEarth"
        },
        "mark": "circle",
        "encoding": {
          "longitude": {
            "field": "X",
            "type": "quantitative"
          },
          "latitude": {
            "field": "Y",
            "type": "quantitative"
          },
          "size": {"value": 10},
          "color": {"value": "steelblue"}
        }
      }
    ]
  }